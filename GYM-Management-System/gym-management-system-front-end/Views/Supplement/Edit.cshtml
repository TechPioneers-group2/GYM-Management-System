@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid d-flex justify-content-center align-items-center backgroundFormClass" style="min-height: 87vh;">
    <div class="col-md-6 bg-dark rounded p-4 border border-1 border-primary rounded glassClassForm">
        <h3 class="text-white text-center">Edit Supplement</h3>
        <hr />

        <form asp-action="Edit" asp-controller="Supplement" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SupplementID" />

            <div class="row">
            <div class="form-group col-md-5">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control rounded border border-1 border-primary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-2">
                <label asp-for="Price" class= "control-label text-white"></label>
                <input asp-for="Price" class="form-control rounded border border-1 border-primary" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

                <div class="form-group col-md-5">
                    <label asp-for="imageURL" class="text-white">Image</label>
                    <input asp-for="imageURL" type="file" name="file" class="form-control border border-1 border-primary" />
                    <span asp-validation-for="imageURL" class="text-danger"></span>
                </div>

            </div>

            <div class="row">
            <div class="form-group">
                <label asp-for="Description" class="control-label text-white"></label>
                <textarea asp-for="Description" class="form-control rounded border border-1 border-primary" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            
            </div>
            <div class="form-group text-center mt-3 d-grid gap-2">
                <div class="row">
                <input type="submit" value="Save" class="btn btn-primary col-md-5 offset-1" />
                <a class="btn btn-secondary mx-1 col-md-5" asp-action="Index" >Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
