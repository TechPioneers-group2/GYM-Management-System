@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container d-flex justify-content-center align-items-center mt-5 pt-5">
    <div class="col-md-4 bg-dark rounded p-4 border border-1 border-primary rounded">
        <h4 class="text-white"><i class="bi bi-pencil-square me-3"></i>Edit Supplement</h4>

        <form asp-action="Edit" asp-controller="Supplement" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SupplementID" />

            <div class="form-group">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control rounded border border-1 border-primary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label text-white"></label>
                <input asp-for="Price" class="form-control rounded border border-1 border-primary" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label text-white"></label>
                <textarea asp-for="Description" class="form-control rounded border border-1 border-primary"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="imageURL" class="text-white">Image</label>
                <input asp-for="imageURL" type="file" name="file" class="form-control border border-1 border-primary" />
                <span asp-validation-for="imageURL" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success border border-1 border-primary" />
                <a class="btn btn-secondary m-2" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
