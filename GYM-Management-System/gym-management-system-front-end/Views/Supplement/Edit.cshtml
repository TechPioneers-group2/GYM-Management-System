@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4><i class="bi bi-pencil-square me-3"></i>Edit Supplement!</h4>
<hr />
<div>
    <img src="@Model.imageURL" style=" width:10rem; height:10rem;" />
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Supplement" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SupplementID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="imageURL">Image</label>
                <input asp-for="imageURL" type="file" name="file" class="form-control border border-1 border-light border-dark-subtle" />
                <span asp-validation-for="imageURL" class="text-danger"></span>
            </div>
            <div class="form-group m-1 d-flex justify-content-center">
                <input type="submit" value="Save" class="btn btn-success m-2" />
                <a class="btn btn-secondary m-2" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
