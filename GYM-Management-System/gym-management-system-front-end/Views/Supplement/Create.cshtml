@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "";
}

<div class="container mt-5 pt-5" >
    <h4 class="text-center"><i class="bi bi-plus-circle me-3"></i>Create Supplement!</h4>
    

    <div class="row justify-content-center">
        <div class="col-md-4 border border-1 border-primary rounded">
            <form asp-action="Create" asp-controller="Supplement" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="imageURL" class="control-label">Image</label>
                    <input asp-for="imageURL" type="file" name="file" class="form-control border border-1 border-light border-dark-subtle" />
                    <span asp-validation-for="imageURL" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-success m-2" />
                    <a class="btn btn-secondary m-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
