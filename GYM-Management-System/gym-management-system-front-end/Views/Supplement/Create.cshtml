@model gym_management_system_front_end.Models.SupplementViewModel

<div class="container-fluid d-flex justify-content-center align-items-center backgroundFormsClass" style="min-height: 87vh;">
    <div class="col-md-6 bg-dark rounded p-4 border border-1 border-primary rounded glassClassForm">
        <h4 class="text-white text-center mb-4">Create Supplement!</h4>
        <hr />
        <form asp-action="Create" asp-controller="Supplement" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-5">
                    <label asp-for="Name" class="control-label text-white"></label>
                    <input asp-for="Name" class="form-control rounded rounded-3 border border-1 border-primary" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-2">
                    <label asp-for="Price" class="control-label text-white"></label>
                    <input asp-for="Price" type="number" class="form-control rounded rounded-3  border border-1 border-primary" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5">
                    <label asp-for="imageURL">Image</label>
                    <input asp-for="imageURL" type="file" name="file" class="form-control rounded rounded-3  border border-1 border-primary" />
                    <span asp-validation-for="imageURL" class="text-danger"></span>
                </div>

            </div>

            <div class="row">
                <div class="form-group">
                    <label asp-for="Description" class="">Description</label>
                    <textarea asp-for="Description" class="form-control rounded border rounded-3 border-1 border-primary" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            </div>

            <div class="row">
                <div class="form-group text-center mt-3 d-grid gap-2">
                    <input type="submit" value="Save" class="btn btn-primary " />
                    <a class="btn btn-secondary " asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
