@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container d-flex justify-content-center align-items-center mt-5 pt-5">
    <div class="col-md-4 bg-dark rounded p-4 border border-1 border-primary rounded">
        <h1 class="text-white text-center">Delete Supplement</h1>
        <h4 class="text-white text-center">Are you sure you want to delete this Supplement?</h4>
        <hr />

        <div class="row">
            <div class="col-md-12">
                <dl class="row text-white">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.SupplementID)</dd>
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                </dl>

                <form asp-action="DeleteConfirmed" asp-controller="Supplement" class="text-center">
                    <input type="hidden" asp-for="SupplementID" />
                    <input type="submit" value="Delete" class="btn btn-danger m-2" />
                    <a class="btn btn-secondary m-2" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
