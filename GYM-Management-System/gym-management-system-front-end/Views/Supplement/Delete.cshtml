@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-12 d-flex justify-content-center align-items-center">
    <div class="container my-5 pt-5 pb-3 d-flex justify-content-center align-items-center h-50 w-75">
        <table class="table table-dark table-bordered w-50">
            <thead class="thead-dark">
                <tr>
                    <th colspan="2" class="text-center">
                        <h1 class="text-white">Delete Supplement</h1>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="2" class="text-center">
                        <img src="@Model.imageURL" alt="@Model.Name" class="card-img-top" style="max-width: 30%;" />
                    </td>
                </tr>
                <tr>
                    <td>ID:</td>
                    <td>@Html.DisplayFor(model => model.SupplementID)</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>Price:</td>
                    <td>@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <td>Description:</td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td colspan="2" class="text-center">
                        <form asp-action="DeleteConfirmed" asp-controller="Supplement" class="d-grid gap-2">
                            <input type="hidden" asp-for="SupplementID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary ">Back to List</a>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

