@model gym_management_system_front_end.Models.SupplementViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Supplement</h1>

<h4>Are you sure you want to delete this Supplement?</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SupplementID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SupplementID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-controller="Supplement" class="m-1 d-flex justify-content-center">
            <input type="hidden" asp-for="SupplementID" />
            <input type="submit" value="Delete" class="btn btn-danger m-2" />
            <a class="btn btn-secondary m-2" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
