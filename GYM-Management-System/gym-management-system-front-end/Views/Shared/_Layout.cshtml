<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gym_management_system_front_end</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gym_management_system_front_end.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />

</head>
<body>
    <nav class="navbar custom-navbar navbar-expand-md navbar-toggleable-lg navbar-light bg-secondary fixed-top fw-bold fs-6" id="mainNav">
        <div class="container-fluid d-flex justify-content-between">
            <div>
                <a class="navbar-brand text-white ms-5" asp-area="" asp-controller="Home" asp-action="Index">WillPower</a>
            </div>
            <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse d-md-inline-flex  collapse fw-bold fs-4 w-100">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-white text-center text-nowrap" asp-controller="Gyms" asp-action="Index">Gyms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white text-center text-nowrap" asp-controller="Supplement" asp-action="ClientIndex">Supplements</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white text-center text-nowrap" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white text-center text-nowrap" asp-area="">Admin Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white text-center text-nowrap" asp-area="" asp-controller="User" asp-action="RegisterClient">Register Client</a>
                </li>
            </ul>
        </div>
    </nav>


        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>


    <footer class="footer py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 text-lg-start">Copyright &copy; WillPower 2023</div>
                <div class="col-lg-4 my-3 my-lg-0">
                    <a class="btn  btn-social mx-2 fs-3" href="#!" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                    <a class="btn btn-social mx-2 fs-3" href="#!" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                    <a class="btn btn-social mx-2 fs-3" href="#!" aria-label="instagram"><i class="bi bi-instagram"></i></a>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a class="link-dark text-decoration-none me-3 text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
