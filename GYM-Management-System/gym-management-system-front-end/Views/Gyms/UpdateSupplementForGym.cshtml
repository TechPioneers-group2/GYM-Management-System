@model gym_management_system_front_end.Models.GymSupplementViewModel

@{
    ViewData["Title"] = "UpdateSupplementForGym";
}



<div>
    <h4>Update Supplement For Gym</h4>
    <hr />
    <dl class="row">
        <!-- Display Supplement ID and Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplementID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplementID)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Supplement?.Name
        </dd>
    </dl>

    <form asp-action="ConfirmUpdateSupplementForGym" asp-controller="Gyms">
        <input type="hidden" asp-for="GymID" />
        <input type="hidden" asp-for="SupplementID" />
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <input type="submit" value="Save" class="btn btn-success" />
        <a href="#" class="btn btn-secondary" onclick="history.back()">Back</a>
    </form>
</div>
