@model gym_management_system_front_end.Models.GymSupplementViewModel

@{
    ViewData["Title"] = "RemoveSupplementFromGym";
}

<h1>Remove Supplement From Gym</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>GymSupplementViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplementID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplementID)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Supplement?.Name
        </dd>
    </dl>

    <form asp-action="ConfirmRemoveSupplementFromGym" asp-controller="Gyms">
        <input type="hidden" asp-for="GymID" />
        <input type="hidden" asp-for="SupplementID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="#" class="btn btn-secondary" onclick="history.back()">Back</a>
    </form>
</div>
