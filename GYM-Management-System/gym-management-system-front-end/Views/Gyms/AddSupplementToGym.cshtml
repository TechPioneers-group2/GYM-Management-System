@model gym_management_system_front_end.Models.GymSupplementViewModel

@{
    ViewData["Title"] = "AddSupplementToGym";
}


<div class="">
    <h1 class="mt-5 pt-5 text-center">AddSupplementToGym</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="AddSupplementToGym">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GymID" class="">Gym</label>
                    <select class="form-select border border-1 border-primary" asp-for="GymID">
                        <option value="">-- Select Gym --</option>
                        @{
                            foreach (var item in Model.GymIDs)
                            {
                                <option value="@item.GymID">@item.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="SupplementID">Supplement</label>
                    <select class="form-select border border-1 border-primary" asp-for="SupplementID">
                        <option value="">-- Select Supplement --</option>
                        @{
                            foreach (var item in Model.SupplementIDs)
                            {
                                <option value="@item.SupplementID">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Add" class="btn btn-primary " />
                </div>
            </form>

        </div>
    </div>
</div>


<div class="d-flex justify-content-end">
    <a class="btn btn-primary" href="#" onclick="history.back();">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
