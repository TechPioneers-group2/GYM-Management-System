@model gym_management_system_front_end.Models.GymViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5 pt-5 d-flex justify-content-center align-items-center ">
    <table class="table table-dark table-bordered w-50">
        <tbody>
            <tr>
                <th colspan="2" class="text-center">
                    <h4>Delete Gym <i class="bi bi-trash me-3"></i></h4>
                </th>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <img src="@Model.imageURL" class="img-fluid" alt="Gym Image">
                </td>
            </tr>
            <tr>
                <td>ID:</td>
                <td>@Html.DisplayFor(model => model.GymID)</td>
            </tr>
            <tr>
                <td>Name:</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>Address:</td>
                <td>@Html.DisplayFor(model => model.Address)</td>
            </tr>
            <tr>
                <td>Max Capacity:</td>
                <td>@Html.DisplayFor(model => model.MaxCapacity)</td>
            </tr>
            <tr>
                <td>Current Capacity:</td>
                <td>@Html.DisplayFor(model => model.CurrentCapacity)</td>
            </tr>
            <tr>
                <td>Active Hours:</td>
                <td>@Html.DisplayFor(model => model.ActiveHours)</td>
            </tr>
            <tr>
                <td>Notification:</td>
                <td>@Html.DisplayFor(model => model.Notification)</td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <form asp-action="DeleteConfirmed" asp-controller="Gyms" class="d-grid gap-2">
                        <input type="hidden" asp-for="GymID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-primary mt-3">Back to List</a>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>



