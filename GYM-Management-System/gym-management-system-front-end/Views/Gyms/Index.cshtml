@model IEnumerable<gym_management_system_front_end.Models.GymViewModel>

@{
    ViewData["Title"] = "Index";
   
    Layout = "_Admin";

}

<h1 class="text-center mt-2 text-danger">Our Pranches</h1>

<p class="ms-5">
    <a class="btn btn-light" asp-action="Create" asp-controller="Gyms">Create New</a>
</p>
<div class="table-cont col-8 offset-2 ">
    <table class="table table-striped table-hover rounded-3">
    
        
    
        <thead>
            <tr>
                <th scope="col">Gym ID</th>
                <th scope="col">Name</th>
                <th scope="col">Details</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
                @foreach (var gym in Model)
                {
                <tr>
                    <th scope="row">
                            @gym.GymID
                    </th>
                    <td>
                            @gym.Name
                    </td>


                    <td>

                        <a class="" asp-controller="Gyms" asp-action="Details" asp-route-id="@gym.GymID">Details</a>

                    </td>
                    <td>
                        <a class="" asp-controller="Gyms" asp-action="Edit" asp-route-id="@gym.GymID">Edit</a>
                    </td>
                    <td>
                        <a class="Delete" asp-controller="Gyms" asp-action="Delete" asp-route-id="@gym.GymID">Delete</a>
                    </td>
                </tr>
                }
        </tbody>
  
</table>
</div>
