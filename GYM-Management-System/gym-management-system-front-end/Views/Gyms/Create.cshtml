@model gym_management_system_front_end.Models.PostGymDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container d-flex justify-content-center align-items-center mt-5 pt-5" style="min-height: 81vh;">
    <div class="col-md-6 bg-dark rounded p-4 border border-1 border-primary rounded">
        <h4 class="text-white mb-4">Create New Gym</h4>
        <form asp-action="Create" asp-controller="Gyms" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label text-white"></label>
                <input asp-for="Address" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxCapacity" class="control-label text-white"></label>
                <input asp-for="MaxCapacity" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentCapacity" class="control-label text-white"></label>
                <input asp-for="CurrentCapacity" type="number" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="CurrentCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ActiveHours" class="control-label text-white"></label>
                <input asp-for="ActiveHours" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="ActiveHours" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notification" class="control-label text-white"></label>
                <input asp-for="Notification" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="Notification" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="imageURL">Image</label>
                <input asp-for="imageURL" type="file" name="file" class="form-control rounded rounded-3 border border-1 border-primary" />
                <span asp-validation-for="imageURL" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3 d-grid gap-2">
                <input type="submit" value="Create" class="btn btn-lg btn-primary border border-1 border-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
