@model gym_management_system_front_end.Models.PostGymDTO

@{
    ViewData["Title"] = "Create";
    Layout = "_Admin";

}

<style>
	/* Form background and button color */

	/* Container for the form */
	.form-container {
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 20px;
		margin-top: 20px;
	}

	/* Form background and styling */
	.form-box {
		background-color: #0F2537;
		padding: 20px;
		border: 1px solid #FF771C;
		border-radius: 5px;
		width: 100%;
		max-width: 500px;
	}

	/* Input and label styles */
	.form-group {
		margin-bottom: 15px;
	}

		.form-group label {
			display: block;
			margin-bottom: 5px;
		}

		/* Target username, password, and select elements */
		.form-group select {
			width: 100%;
			padding: 10px;
			background-color: #0F2537;
			border: 1px solid #FF771C;
			color: white;
		}
	/* Custom select style */
	.custom-select {
		position: relative;
	}

		.custom-select select {
			width: 100%;
			padding: 10px;
			background-color: #0F2537;
			border: 1px solid #FF771C;
			color: white;
			appearance: none; /* Remove default dropdown arrow on some browsers */
		}

		.custom-select::after {
			content: "\25BC"; /* Unicode for down arrow */
			position: absolute;
			top: 12px;
			right: 10px;
			color: #FF771C;
			pointer-events: none;
		}

	.form-group input[type="text"],
	.form-group input[type="password"],
	.form-group input[type="number"],
	.form-group select {
		width: 100%;
		padding: 10px;
		background-color: #0F2537 !important;
		border: 1px solid #FF771C !important;
		color: white !important;
	}

	/* Button style */
	.form-group input[type="submit"] {
		background-color: #FF771C !important;
		color: white;
		border: none;
		padding: 10px 20px;
		cursor: pointer;
	}

	.text-danger {
		color: #FF771C !important;
	}
	a{
		color: #FF771C !important;
	}
	a:hover{
			color: white !important;
	}
</style>
<hr />
<div class="container">
	<div class="form-container">
		<div class="form-box">
		<h3>Creat New Gym</h3>
        <form asp-action="Create" asp-controller="Gyms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
					<input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
					<input type="text" asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCapacity" class="control-label"></label>
					<input type="text" asp-for="MaxCapacity" class="form-control" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentCapacity" class="control-label"></label>
                <input type="number" asp-for="CurrentCapacity" class="form-control" />
                <span asp-validation-for="CurrentCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveHours" class="control-label"></label>
					<input type="text" asp-for="ActiveHours" class="form-control" />
                <span asp-validation-for="ActiveHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification" class="control-label"></label>
					<input type="text" asp-for="Notification" class="form-control" />
                <span asp-validation-for="Notification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

