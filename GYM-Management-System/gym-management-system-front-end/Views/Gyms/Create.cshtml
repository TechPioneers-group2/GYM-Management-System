@model gym_management_system_front_end.Models.PostGymDTO

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-center text-center mb-3">
                    <h3>Create Gym</h3>
                </div>

                <form asp-action="Create" asp-controller="Gyms" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Name" />
                        <label asp-for="Name" for="floatingInput" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Address" class="form-control" id="floatingAddress" placeholder="Address" />
                        <label asp-for="Address" for="floatingAddress" class="control-label"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="MaxCapacity" type="number" class="form-control" id="floatingMaxCapacity" placeholder="Max Capacity" />
                        <label asp-for="MaxCapacity" for="floatingMaxCapacity" class="control-label"></label>
                        <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="CurrentCapacity" type="number" class="form-control" id="floatingCurrentCapacity" placeholder="Current Capacity" />
                        <label asp-for="CurrentCapacity" for="floatingCurrentCapacity" class="control-label"></label>
                        <span asp-validation-for="CurrentCapacity" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ActiveHours" type="text" class="form-control" id="floatingActiveHours" placeholder="Active Hours" />
                        <label for="floatingActiveHours" class="control-label">@Html.DisplayNameFor(model => model.ActiveHours)</label>
                        <span asp-validation-for="ActiveHours" class="text-danger"></span>
                    </div>

                    <!-- Notification -->
                    <div class="form-floating mb-3">
                        <input asp-for="Notification" type="text" class="form-control" id="floatingNotification" placeholder="Notification" />
                        <label for="floatingNotification" class="control-label">@Html.DisplayNameFor(model => model.Notification)</label>
                        <span asp-validation-for="Notification" class="text-danger"></span>
                    </div>

                    <!-- Image -->
                    <div class="form-group mb-3">
                        <label asp-for="imageURL">Image</label>
                        <input asp-for="imageURL" type="file" name="file" class="form-control border border-1 border-light border-dark-subtle" />
                        <span asp-validation-for="imageURL" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary py-3 w-100 mb-4" />
                        <!-- Link to login page -->
                        <div>
                            <a asp-action="Index" asp-controller="Gyms">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
