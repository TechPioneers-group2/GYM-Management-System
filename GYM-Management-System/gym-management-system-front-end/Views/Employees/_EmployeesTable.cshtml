@model IEnumerable<EmployeeViewModel>

@{
	ViewData["Title"] = "Employees";
	var gymList = new SelectList(ViewBag.gymList, "GymID", "Name");
}
<style>
	.Delete:hover{
		color:red;
	}
</style>
<div class="">
	
	<div class="form-div">
		<form method="Post" asp-controller="Employees" asp-action="GetEmployeesByGymId" class="form-emp-T">
			<div class="flex-form-div">
				<div class="form-group ">
					<label for="gymId" class="control-label">Choose A Gym</label>
				</div>
				<div class="form-group ">
					<select class="form-select" asp-items="@gymList" id="gymId" name="gymId">
						<i class="bi bi-caret-down" style="color: #FF771C; width:10px;"></i>
					</select>
				</div>
				<div class="form-group btn-sub">
					<input type="submit" value="Search" class="custom-button" />
				</div>
			</div>
		</form>




	</div>
	@if (ViewBag.Employees == "All")
	{
		<h3>

         All Employees

		</h3>
	}


	else
	{
		/*@if (Model.ToList() != null)
		{

			<h3>@Model.ToList()[0].gymBaseDto.Name</h3>
		}*/
		<h3 style=" margin-left:20px;">@ViewBag.gymName</h3>
	}
		
	<div class="table-cont">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th scope="col">Employee ID</th>
				<th scope="col">Employee Name</th>
				<th scope="col">Details</th>
				<th></th>
				<th></th>

			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model)
			{
				<tr>
					<th scope="row">
						@employee.EmployeeID
					</th>
					<td>
						@employee.Name
					</td>


					<td>

						<a class="" asp-controller="Employees" asp-action="GetEmployee" asp-route-id="@employee.EmployeeID">Details</a>

					</td>
					<td>
						<a class="" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a>
					</td>
					<td>
						<a class="Delete"  asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.EmployeeID" onclick="return confirm('Are You Sure that You Want To Delete The Employee @employee.Name  ?')">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	</div>
</div>


