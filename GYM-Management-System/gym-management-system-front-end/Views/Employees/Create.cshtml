@model RegisterEmployeeViewModel

@{
    ViewData["Title"] = "Creat Employee";
    var gymList = new SelectList(ViewBag.gymList, "GymID", "Name");
    Layout = "_Layout";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 87vh;">
    <div class="col-md-6 bg-dark rounded p-4">

       
            <form method="Post" asp-controller="Employees" asp-action="Create">
                <div class="row">
                    <div>
                        <h3>User Account Info</h3>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="UserName" class="control-label"></label>
                                <input type="text" asp-for="UserName" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class=" form-group col-md-8">
                                <label asp-for="Email" class="control-label"></label>
                                <input type="text" asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input type="text" asp-for="PhoneNumber" class="form-control">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <h3>Employee Info</h3>
                        <div class=" form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input type="text" asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class=" form-group">
                            <label asp-for="JobDescription" class="control-label"></label>
                            <input type="text" asp-for="JobDescription" class="form-control">
                            <span asp-validation-for="JobDescription" class="text-danger"></span>
                        </div>
                        <div class=" form-group">
                            <label asp-for="WorkingDays" class="control-label"></label>
                            <input type="text" asp-for="WorkingDays" class="form-control">
                            <span asp-validation-for="WorkingDays" class="text-danger"></span>
                        </div>
                        <div class=" form-group">
                            <label asp-for="WorkingHours" class="control-label"></label>
                            <input type="text" asp-for="WorkingHours" class="form-control">
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                        <div class=" form-group">
                            <label asp-for="Salary" class="control-label"></label>
                            <input type="text" asp-for="Salary" class="form-control">
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <div class=" form-group">
                            @Html.CheckBoxFor(m=>m.IsAvailable)
                            <lable class="category-label">IsAvaliabe</lable>
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GymID" class="control-label"> Gym</label>
                            <select asp-for="GymID" asp-items="@gymList" class="form-control custom-select"></select>
                            <span asp-validation-for="GymID" class="text-danger"></span>
                        </div>
                    </div>
                </div>



            <div class="form-group text-center mt-3 d-grid gap-2">
                <input type="submit" value="Submit" class="btn btn-lg btn-primary border border-1 border-primary" />
            </div>

            </form>
        </div>
    </div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
		}
