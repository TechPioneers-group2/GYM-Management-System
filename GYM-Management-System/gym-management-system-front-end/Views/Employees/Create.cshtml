@model RegisterEmployeeViewModel

@{
	ViewData["Title"] = "Creat Employee";
	var gymList = new SelectList(ViewBag.gymList, "GymID", "Name");
}

<div class="add-category-text">
	<h3>Add new Employee</h3>
</div>
<div  class="container">
	<div >
	<form method="Post"  asp-controller="Employees" asp-action="Create" >
	

			<div class="row">
				<div >
					<h3>User Account Info</h3>
					<div class="col-md-12 form-group">
						<label asp-for="UserName"></label>
						<input type="text" asp-for="UserName" class="category-input">
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="col-md-12 form-group">
						<label asp-for="Email"></label>
						<input type="text" asp-for="Email" class="category-input">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="col-md-12 form-group">
						<label asp-for="PhoneNumber"></label>
						<input type="text" asp-for="PhoneNumber" class="category-input">
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
					<div class="col-md-12 form-group">
						<label asp-for="Password"></label>
						<input type="password" asp-for="Password" class="category-input">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
				</div>
				<div >
					<h3>Employee Info</h3>
				<div class="col-md-12 form-group">
					<label asp-for="Name"></label>
					<input type="text" asp-for="Name" class="category-input">
						<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="col-md-12 form-group">
						<label asp-for="JobDescription"></label>
						<input type="text" asp-for="JobDescription" class="category-input"></input>
						<span asp-validation-for="JobDescription" class="text-danger"></span>
				</div>
				<div class="col-md-12 form-group">
						<label asp-for="WorkingDays"></label>
						<input type="text" asp-for="WorkingDays" class="category-input">
						<span asp-validation-for="WorkingDays" class="text-danger"></span>
				</div>
					<div class="col-md-12 form-group">
						<label asp-for="WorkingHours"></label>
						<input type="text" asp-for="WorkingHours" class="category-input">
						<span asp-validation-for="WorkingHours" class="text-danger"></span>
					</div>
					<div class="col-md-12 form-group">
						<label asp-for="Salary"></label>
						<input type="text" asp-for="Salary" class="category-input">
						<span asp-validation-for="Salary" class="text-danger"></span>
					</div>
					<div class="col-md-12 form-group">
						@Html.CheckBoxFor(m=>m.IsAvailable)
						<lable class="category-label">IsAvaliabe</lable>
						<span asp-validation-for="IsAvailable" class="text-danger"></span>
					</div>
				<div class="col-md-12 form-group">
						<label asp-for="GymID"> Gym</label>
						<select asp-for="GymID" asp-items="@gymList" class="category-input"></select>
					<span asp-validation-for="GymID" class="text-danger"></span>
				</div>
			</div>
			</div>

		
	
		<div class="form-group form-group-margin form-header-3">
			<input type="submit" value="create"  />
		</div>
	
</form>
</div>
</div>
@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
		}
