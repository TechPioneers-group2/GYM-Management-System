@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
	var gymList = new SelectList(ViewBag.gymList, "GymID", "Name");
}


<div class="">
	<div>
		<a class="" asp-controller="Employees" asp-action="Create">Register Employee </a>
		<form method="Post" asp-controller="Employees" asp-action="GetEmployeesByGymId" >

			<div class="col-md-12 form-group">
				<label> Gym</label>
				<select asp-items="@gymList" id="gymId" name="gymId"></select>
			</div>
			<div class="form-group form-group-margin form-header-3">
				<input type="submit" value="Search" />
			</div>
		</form>
	</div>
	<table class="table table-dark table-hover">
		<thead>
			<tr>
				<th scope="col">Employee ID</th>
				<th scope="col">Employee Name</th>
				<th scope="col">Details</th>
			    <th></th>
				<th></th>

			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model)
			{
				<tr>
					<th scope="row">
						@employee.EmployeeID
					</th>
					<td>
						@employee.Name
					</td>
				

					<td>

						<a class="" asp-controller="Employees" asp-action="GetEmployee" asp-route-id="@employee.EmployeeID">Details</a>
						
					</td>
					<td>
						<a class="" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a>
					</td>
					<td>
						<a class="" asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.EmployeeID" onclick="return confirm('Are You Sure that You Want To Delete The Employee @employee.Name  ?')">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>


