@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
    var gymList = new SelectList(ViewBag.gymList, "GymID", "Name");
}

<div class="container-fluid d-flex justify-content-center align-items-center backgroundFormsClass" style="min-height: 87vh;">
    <div class="col-md-6 bg-dark rounded p-4 border border-1 border-primary rounded glassClassForm">

        <h4 class="text-center">Edit Employee</h4>
        <hr />
        <div class="row">
            <form method="Post" asp-controller="Employees" asp-action="Edit" class="">

                <input asp-for="EmployeeID" type="hidden" />
                <div class="row">

                    <div class="col-md-6 form-group">
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-group">
                        <label asp-for="JobDescription"></label>
                        <input type="text" asp-for="JobDescription" class="form-control" />
                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6 form-group">
                        <label asp-for="WorkingDays"></label>
                        <input type="text" asp-for="WorkingDays" class="form-control" />
                        <span asp-validation-for="WorkingDays" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-group">
                        <label asp-for="WorkingHours"></label>
                        <input type="text" asp-for="WorkingHours" class="form-control" />
                        <span asp-validation-for="WorkingHours" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">

                <div class="col-md-6 form-group">
                    <label asp-for="Salary"></label>
                    <input type="text" asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="GymID">Gym</label>
                    <select asp-for="GymID" asp-items="@gymList" class="form-control"></select>
                    <span asp-validation-for="GymID" class="text-danger"></span>
                </div>

                </div>

                <div class="col-md-6 form-group mt-2 ms-1">
                    @Html.CheckBoxFor(m => m.IsAvailable, new { @class = "form-check-input" })
                    <label class="form-check-label">Is Available</label>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>

                <div class="form-group mt-2 d-grid gap-2 ">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
