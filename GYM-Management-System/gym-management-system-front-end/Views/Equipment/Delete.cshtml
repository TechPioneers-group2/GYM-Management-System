@model EquipmentViewModel

<div class="container my-5 pt-5 col-6 offset-3">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h2 class="card-title text-center"><i class="bi bi-trash me-3"></i>Delete Gym Equipment</h2>
            <hr>

            <img src="@Model.PhotoUrl" alt="@Model.Name" class="card-img-top" style="max-width: 100%;" />

            <div class="form-group mt-4">
                <div class="row">
                    <div class="col-sm-4 text-start">
                        <label>Gym Equipment Name:</label>
                    </div>
                    <div class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="row">
                    <div class="col-sm-4 text-start">
                        <label>Gym Equipment ID:</label>
                    </div>
                    <div class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.GymEquipmentID)
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="row">
                    <div class="col-sm-4 text-start">
                        <label>Out of Service:</label>
                    </div>
                    <div class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.OutOfService)
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="row">
                    <div class="col-sm-4 text-start">
                        <label>Quantity:</label>
                    </div>
                    <div class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.Quantity)
                    </div>
                </div>
            </div>

            <p class="mt-3">Are you sure you want to delete this gym equipment?</p>

            @using (Html.BeginForm("Delete", "Equipment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-primary mt-3">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
