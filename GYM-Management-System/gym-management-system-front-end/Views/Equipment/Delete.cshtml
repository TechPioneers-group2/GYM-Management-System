@model EquipmentViewModel

<div class="container my-5 pt-5 d-flex justify-content-center align-items-center">
    <table class="table table-dark table-bordered w-50">
        <tbody>
            <tr>
                <th colspan="2" class="text-center">
                    <h4>Delete Gym Equipment <i class="bi bi-trash me-3"></i></h4>
                </th>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <img src="@Model.PhotoUrl" alt="@Model.Name" class="card-img-top" style="max-width: 50%;" />
                </td>
            </tr>
            <tr>
                <td>Gym Equipment Name:</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>Gym Equipment ID:</td>
                <td>@Html.DisplayFor(model => model.GymEquipmentID)</td>
            </tr>
            <tr>
                <td>Out of Service:</td>
                <td>@Html.DisplayFor(model => model.OutOfService)</td>
            </tr>
            <tr>
                <td>Quantity:</td>
                <td>@Html.DisplayFor(model => model.Quantity)</td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <form asp-action="Delete" asp-controller="Equipment" method="post" class="d-grid gap-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-primary mt-3">Cancel</a>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
