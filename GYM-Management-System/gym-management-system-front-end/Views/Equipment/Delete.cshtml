@model EquipmentViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Delete Gym Equipment</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #03030b;
            color: white;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h2 {
            color: #fb7208;
        }

        .card {
            background-color: #233242;
            color: white;
            margin: 10px;
            border: none;
        }

            .card img {
                max-width: 100%;
            }

        .card-title {
            font-size: 20px;
            font-weight: bold;
            color: #fb7208;
        }

        .card-text {
            font-size: 16px;
        }

        .btn {
            background-color: #fb7208;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Gym Equipment</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name</h4>
                        <p class="card-text">ID: @Model.GymEquipmentID</p>
                        <p class="card-text">Out of Service: @Model.OutOfService</p>
                        <p class="card-text">Quantity: @Model.Quantity</p>
                        <img src="@Model.img" alt="@Model.Name" class="card-img-top" style="max-width: 100%;" />
                        <p>Are you sure you want to delete this gym equipment?</p>
                        @using (Html.BeginForm("Delete", "Equipment", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
