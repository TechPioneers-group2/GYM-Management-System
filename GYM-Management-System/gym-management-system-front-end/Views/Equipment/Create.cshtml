@model EquipmentViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Create Gym Equipment</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #03030b;
            color: white;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h2 {
            color: #fb7208;
        }

        .card {
            background-color: #233242;
            color: white;
            margin: 10px;
            border: none;
        }

            .card img {
                max-width: 100%;
            }

        .card-title {
            font-size: 20px;
            font-weight: bold;
            color: #fb7208;
        }

        .card-text {
            font-size: 16px;
        }

        .btn {
            background-color: #fb7208;
            color: white;
        }

        /* Additional styling for the form */
        .form-group label {
            color: white;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create Gym Equipment</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create"  method="post" enctype="multipart/form-data">
                            <input type="hidden" name="__RequestVerificationToken" value="your-antiforgery-token-here" />

                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" name="Name" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="Quantity">Quantity</label>
                                <input type="text" name="Quantity" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="OutOfService">Out of Service</label>
                                <input type="text" name="OutOfService" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="GymID">Gym ID</label>
                                <input type="text" name="GymID" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="formFile">Image</label>
                                <input type="file" name="file" class="form-control" />
                            </div>

                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
