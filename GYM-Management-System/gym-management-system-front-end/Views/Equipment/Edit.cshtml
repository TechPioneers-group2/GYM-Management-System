@model EquipmentViewModel
@{
    ViewData["Title"] = "Edit Gym Equipment";
}

<div class="container-fluid d-flex justify-content-center align-items-center backgroundFormsClass" style="min-height: 87vh;">
    <div class="col-lg-6 col-10 bg-dark rounded p-4 border border-1 border-primary rounded glassClassForm">
        <h3 class="text-white text-center">Edit Gym Equipment</h3>
        <hr />

        <form asp-action="Edit" asp-controller="Equipment" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GymEquipmentID" />
            <input type="hidden" asp-for="Name" />

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Quantity" class="control-label text-white"></label>
                    <input asp-for="Quantity" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="OutOfService" class="control-label text-white"></label>
                    <input asp-for="OutOfService" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="OutOfService" class="text-danger"></span>
                </div>

            </div>
                <div class="form-group col-md-12">
                    <label for="formFile" class="control-label text-white">Image</label>
                    <input type="file" name="file" class="form-control rounded border border-1 border-primary" />
                </div>

            <div class="form-group text-center mt-3 d-grid gap-3">
                    <input type="submit" value="Save Changes" class="btn btn-primary my-1" />
                    <a class="btn btn-secondary" asp-action="TableView">Back to List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
