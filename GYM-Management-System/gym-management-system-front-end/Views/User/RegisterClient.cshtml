@model gym_management_system_front_end.Models.RegisterClientDTO

@{
    ViewData["Title"] = "RegisterClient";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 87vh;">
    <div class="col-md-6 bg-dark rounded p-4">
        <h4 class="text-white mb-4">RegisterClientDTO</h4>
        <form asp-action="RegisterClient" asp-controller="User">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label text-white"></label>
                    <input asp-for="Email" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label text-white"></label>
                    <input asp-for="Password" type="password" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserName" class="control-label text-white"></label>
                    <input asp-for="UserName" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label text-white"></label>
                    <input asp-for="PhoneNumber" type="number" class="form-control rounded  border border-1 border-primary" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GymID" class="control-label text-white"></label>
                    <input asp-for="GymID" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="GymID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SubscriptionTierID" class="control-label text-white"></label>
                    <input asp-for="SubscriptionTierID" class="form-control rounded border border-1 border-primary" />
                    <span asp-validation-for="SubscriptionTierID" class="text-danger"></span>
                </div>

            <div class="form-group text-center mt-3 d-grid gap-2">
                <input type="submit" value="Submit" class="btn btn-lg btn-primary border border-1 border-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
