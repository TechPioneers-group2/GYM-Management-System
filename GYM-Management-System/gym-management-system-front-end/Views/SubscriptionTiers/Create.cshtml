@model gym_management_system_front_end.Models.CreatSubscriptionTierDTO

@{
	ViewData["Title"] = "Create";

}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 87vh;">
	<div class="col-md-6 bg-dark rounded p-4 border border-1 border-primary rounded">
		<h4 class="text-white mb-4 text-center">Create Subscription Tier</h4>
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>


			<div class="form-group">
				<label asp-for="Name" class="control-label text-white"></label>
				<input asp-for="Name" class="form-control rounded rounded-3 border border-1 border-primary" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Price" class="control-label text-white"></label>
				<input asp-for="Price" class="form-control rounded rounded-3 border border-1 border-primary" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Length" class="control-label text-white"></label>
				<input asp-for="Length" class="form-control rounded rounded-3 border border-1 border-primary" />
				<span asp-validation-for="Length" class="text-danger"></span>
			</div>

			<div class="form-group text-center mt-3 d-grid gap-2">
				<input type="submit" value="Create" class="btn btn-lg btn-outline-primary border border-1 border-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
                            }
