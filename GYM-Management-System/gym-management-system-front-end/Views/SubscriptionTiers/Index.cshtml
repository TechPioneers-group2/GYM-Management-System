@model IEnumerable<gym_management_system_front_end.Models.SubscriptionTiersViewModel>

@{
    ViewData["Title"] = "Index";
   
}


<div class="h-100  mh-100 my-4 pt-5 " style="min-height:78vh ;">
    <div class="container ">
        <p>
            <a asp-action="Create" class="btn btn-success mt-5 rounded rounded-3 mx-1">
                <i class="bi bi-plus-circle me-1"></i>Create New
            </a>
        </p>
        <h2>Subscription Tiers List</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>SubscriptionTier ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Length</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SubscriptionTierID</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Length</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SubscriptionTierID" class="btn btn-outline-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.SubscriptionTierID" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</div>

