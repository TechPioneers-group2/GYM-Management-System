@model gym_management_system_front_end.Models.SubscriptionTiersViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="col-md-6">
        <h2>Delete Subscription Tier</h2>
        <h3>Are you sure you want to delete this?</h3>
        <hr />

        <table class="table table-bordered table-dark">
            <tr>
                <th>SubscriptionTierID</th>
                <td>@Model.SubscriptionTierID</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>@Model.Length</td>
            </tr>
        </table>

        <form asp-action="Delete" asp-route-SubscriptionTierID="@Model.SubscriptionTierID" class="text-center m-1">
            <button type="submit" class="btn btn-danger m-2">Delete</button>
            <a class="btn btn-secondary m-2" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
