@model gym_management_system_front_end.Models.SubscriptionTiersViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class=" vh-100 d-flex justify-content-center align-items-center">
    <div class="container mt-5 d-flex justify-content-center align-items-center">
        <div class="col-md-6">

            <table class="table table-bordered table-dark mx-auto">
                <tr>
                    <th colspan="2">
                        <h3 class="text-center">Delete Subscription Tier</h3>
                    </th>
                </tr>
                <tr>
                    <th>SubscriptionTierID</th>
                    <td>@Model.SubscriptionTierID</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>@Model.Price</td>
                </tr>
                <tr>
                    <th>Length</th>
                    <td>@Model.Length</td>
                </tr>
                <tr>
                    <td colspan="2" class="text-center">
                        <form asp-action="Delete" asp-route-SubscriptionTierID="@Model.SubscriptionTierID" class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a class="btn btn-secondary mt-3" asp-action="Index">Back to List</a>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
