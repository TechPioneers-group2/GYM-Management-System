@model gym_management_system_front_end.Models.CreatSubscriptionTierDTO

@{
    ViewData["Title"] = "Edit";
}

<div class="container d-flex justify-content-center align-items-center mt-5" style="min-height: 87vh;">
    <div class="col-md-6 bg-dark rounded p-4 border border-1 border-primary rounded">
        <h4 class="text-white mb-4 text-center"><i class="bi bi-pencil-square me-3"></i>Edit Subscription Tier</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label text-white">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label text-white">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Length" class="control-label text-white">Length</label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success m-2">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-start mt-3">
    <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
