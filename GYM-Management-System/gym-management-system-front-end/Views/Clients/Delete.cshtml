@model gym_management_system_front_end.Models.ClientViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5 pt-5 col-6 offset-3">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h2 class="card-title text-center"><i class="bi bi-trash3-fill me-3"></i>Delete Client</h2>
            <hr>

            <dl class="row">
                <dt class="col-sm-4 text-start">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class="col-sm-8 text-end">
                    @Html.DisplayFor(model => model.UserId)
                </dd>

                <dt class="col-sm-4 text-start">
                    @Html.DisplayNameFor(model => model.ClientID)
                </dt>
                <dd class="col-sm-8 text-end">
                    @Html.DisplayFor(model => model.ClientID)
                </dd>

                <dt class="col-sm-4 text-start">
                    @Html.DisplayNameFor(model => model.GymID)
                </dt>
                <dd class="col-sm-8 text-end">
                    @Html.DisplayFor(model => model.GymID)
                </dd>

                <dt class="col-sm-4 text-start">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8 text-end">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4 text-start">
                    @Html.DisplayNameFor(model => model.InGym)
                </dt>
                <dd class="col-sm-8 text-end">
                    @Html.DisplayFor(model => model.InGym)
                </dd>

                <dt class="col-sm-4 text-start">
                    @Html.DisplayNameFor(model => model.SubscriptionTierID)
                </dt>
                <dd class="col-sm-8 text-end">
                    @Html.DisplayFor(model => model.SubscriptionTierID)
                </dd>
            </dl>

            <h3 class="mt-3">Are you sure you want to delete this client?</h3>

            <form asp-controller="Clients" asp-action="Delete" asp-route-gymID="@Model.GymID" asp-route-clientID="@Model.ClientID">
                @Html.AntiForgeryToken()
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" asp-route-gymid="@Model.GymID" class="btn btn-outline-danger mt-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
